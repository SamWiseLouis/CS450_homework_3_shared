<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


       <GridLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:padding="3sp">


           <TextView
            android:layout_column="0"
            android:layout_row="0"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:background="#FFAAAA"
            android:id="@+id/tv_lat"
            />

           <TextView
            android:layout_column="0"
            android:layout_row="1"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:background="#AAAAAA"
            android:id="@+id/tv_lon"
            />
           <TextView
               android:layout_marginTop="15sp"
               android:layout_column="0"
               android:layout_row="2"
               android:layout_width="100sp"
               android:layout_height="wrap_content"
               android:background="#FFAAAA"
               android:id="@+id/tv_velocity"
               android:text="@string/curr_velocity"
               />
           <TextView
               android:layout_column="1"
               android:layout_row="0"
               android:layout_height="wrap_content"
               android:layout_width="wrap_content"
               android:text=" Current Lattitude"

               />
           <TextView
               android:layout_column="1"
               android:layout_row="1"
               android:layout_height="wrap_content"
               android:layout_width="wrap_content"
               android:text=" Current Lattitude"
               />

           <TextView
               android:layout_marginTop="15sp"
               android:layout_column="1"
               android:layout_row="2"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text=" Current Velocity"

               />
           <Button
               android:layout_gravity="right"
               android:layout_column="2"
               android:layout_row="0"
               android:layout_height="wrap_content"
               android:layout_width="wrap_content"
               android:text="Set Point"
               android:id="@+id/new_point"

               />
           <TextView
               android:layout_marginTop="15sp"
               android:layout_marginBottom="15sp"
               android:layout_gravity="right"
               android:layout_column="2"
               android:layout_row="2"
               android:layout_height="wrap_content"
               android:layout_width="wrap_content"
               android:text="List of Points:"

               />
       </GridLayout>

        <GridLayout
            android:layout_weight="3"
            android:layout_marginTop="5sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_column="0"
                android:layout_row="0"
                android:layout_height="300sp"
                android:layout_width="200sp"
                android:text="Point data"/>




        </GridLayout>



    </LinearLayout>

</FrameLayout>